
<main>
<h1 class="text-center  text-danger ">Pokemons.</h1>

      <a class=" btn btn-primary " href="/save-pokemon">Crear Pokemon</a>

<div class="main-container">


<div class="row">

  {{#if hasPokemon}}

        {{#each pokemon as |poke|}}

<div class="col-md-4 mt-5">

   <div class="card  bg-dark text-light">
    <img src="{{poke.imagen}}" style="width: 100%; height:300px; object-fit:contain;"  class="card-img-top" alt="{{poke.nombre}}">
    <div class="card-body">
        <h5 class="card-text text-info">Nombre: {{poke.nombre}}</h5>
        <p class="card-text">Region: {{poke.region.dataValues.nombre}}</p>
        <p class="card-text "> {{poke.type.dataValues.nombre}} {{poke.typesec.dataValues.nombre}}</p>        
      <form id="form-delete" class="form-inline" action="/delete-pokemon" method="POST">
                           <input type="hidden" name="pokemonId" value="{{poke.id}}" />
                  <button type="submit" class=" btn btn-danger mx-2 delete-pokemon" >Eliminar</button>
                        <a class=" btn btn-success" href="/edit-pokemon/{{poke.id}}?edit=true">Editar</a>
              </form>
    </div>


</div>

</div>

  {{/each}}

      {{else}}

      
        <h1>no hay Pokemons creados</h1>


      {{/if}}

</div>

</main>